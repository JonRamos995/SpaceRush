<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <RootNamespace>SpaceRush.Tests</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.9.0" />
    <PackageReference Include="NUnit" Version="3.14.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include Core Game Scripts -->
    <Compile Include="..\Assets\Scripts\Core\**\*.cs" LinkBase="Scripts\Core" />
    <Compile Include="..\Assets\Scripts\Data\**\*.cs" LinkBase="Scripts\Data" />
    <Compile Include="..\Assets\Scripts\Models\**\*.cs" LinkBase="Scripts\Models" />
    <Compile Include="..\Assets\Scripts\Systems\**\*.cs" LinkBase="Scripts\Systems" />

    <!-- Include Game Tests -->
    <Compile Include="..\Assets\Scripts\Tests\**\*.cs" LinkBase="Scripts\Tests" />

    <!-- Note: Exclude UI to avoid TextMeshPro dependency -->
  </ItemGroup>

</Project>
